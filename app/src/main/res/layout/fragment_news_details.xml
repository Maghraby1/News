<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".ui.details.view.NewsDetailsFragment">

    <ImageView
        android:id="@+id/mainIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image"
        android:minHeight="150dp"
        app:layout_constraintTop_toBottomOf="@id/titleTV"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"/>

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/mainIV"
        app:layout_constraintEnd_toEndOf="@id/mainIV"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:colorPrimary"
        tools:text="My title" />
    <TextView
        android:id="@+id/pubDateTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainIV"
        app:layout_constraintEnd_toEndOf="@id/mainIV"
        android:layout_marginHorizontal="16dp"
        android:textColor="?android:colorPrimaryDark"
        android:textSize="14sp"
        tools:text="My title" />
    <TextView
        android:id="@+id/pubTimeTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pubDateTV"
        app:layout_constraintEnd_toEndOf="@id/mainIV"
        android:layout_marginHorizontal="16dp"
        android:textColor="?android:colorPrimaryDark"
        android:textSize="14sp"
        tools:text="My title" />
    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pubTimeTV"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:textSize="16sp"
        android:textColor="?android:colorPrimaryDark"
        tools:text="kajbasjbdlajsndajsnd"/>
    <TextView
        android:id="@+id/linkTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/descriptionTV"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:textColor="?android:colorPrimaryDark"
        android:textSize="16sp"
        tools:text="kajbasjbdlajsndajsnd"
        />
    <TextView
        android:id="@+id/authorTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linkTV"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:textSize="12sp"
        tools:text="name"
        />
</androidx.constraintlayout.widget.ConstraintLayout>